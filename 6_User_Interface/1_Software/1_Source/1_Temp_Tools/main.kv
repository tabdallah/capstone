<Paddle>:
    Image:
        source: 'Images/paddle.png'

<Screen1>:
    Widget:
        paddleObject: paddle

        canvas.before:
            BorderImage:
                source: 'Images/hockeySurface.png'
                pos: self.pos
                size: self.size

        Label:
            color: (0,0,0,1)
            font_size: 30
            center_x: self.parent.width * 7/8
            top: self.parent.top - 10
            text: str(int(self.parent.paddleObject.center_x)) + str(", ") + str(int(self.parent.paddleObject.center_y))

        Paddle:
            id: paddle
            center: self.parent.center

<Screen2>:
    name: "screen2"
    BoxLayout:
        orientation: 'vertical'
        padding: 100
        spacing: 100
        Button:
            text: "Quit Application"
            on_release: app.stop()
        Button:
            text: "go back (3)"
            on_release: self.parent.parent.parent.parent.parent.ids.carousel.load_previous()

<Showtime>:
    carousel: carousel
    Carousel:
        id: carousel
        loop: True
        Screen1:
        Screen2:
